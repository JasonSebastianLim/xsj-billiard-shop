  description="Discover expertly crafted, high-performance billiard cues and accessories from XSJ Billiard. Shop premium cues trusted by professionals."
  url="https://xsjbilliard.com">
  
  <Hero slot="hero" />

  <Featured cues={featuredCues} />
  <Promotions />
  <WhyChooseUs />
  <Testimonials />

</Layout>
